<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="62dp"
    android:layout_height="wrap_content"
    android:paddingVertical="2dp"
    android:background="@drawable/rec_sol_424242_r4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/sortDateButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="@string/sort_date"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_medium"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/sortTitleButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="@string/sort_title"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_medium"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/sortDateButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>